{
    "name": "Python Development",
  
    // Use the default remote - this points to the Visual Studio Code default dev container
    "remoteUser": "vscode",
  
    // Forward local ports to the container (optional)
    "forwardPorts": [8000],
  
    // Add or override settings.json values
    "settings": {
      "python.autoComplete.addBrackets": true,
      "python.formatting.provider": "black",
      "python.linting.pylintEnabled": true,
      "python.linting.flake8Enabled": true
    },
  
    // Install additional packages, e.g., for Python, Node.js, or Java (optional)
    "extensions": ["ms-python.python", "flake"],
  
    // Run additional commands after container creation (optional)
    "postCreateCommand": "pip install pytest mock",
  
    // Uncomment to run custom commands instead of starting a shell (interactive only)
    // "runCommand": "python3"
  }
  